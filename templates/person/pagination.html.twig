{% extends 'base.html.twig' %}

{% block title %}
    Paginated list
{% endblock %}

{% block pageTitle %}
    Paginated list :
{% endblock %}


{% block body %}
    <p class="mb-5">
        Here is the list of the persons we have in our DB. Feel free to look up for details or even edit or delete a
        person if information are incorrect.
    </p>

    <div class="card-columns">
            {% for person in persons %}
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{ person.firstname }} {{ person.lastname }}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">{{ person.age }} years old</h6>
                        <p class="card-text">Current job : {{ person.job }}</p>
                        <a href="{{ path('app_person_get', { id: person.id }) }}" class="card-link">Details</a>
                        <a href="{{ path('app_person_updatef', { id: person.id}) }}" class="card-link">Edit</a>
                        <a href="{{ path('app_person_delete', { id: person.id }) }}" class="card-link">Delete</a>
                    </div>
                </div>
            {% endfor %}
    </div>
    <div class="d-flex justify-content-center mt-2">
        {% if persons|length > 1 %}
            <ul class="pagination">
                {% if actualPage > 1 %}
                    <li class="page-item"><a class="page-link"
                                             href="{{ path('app_person_filter', {page: actualPage - 1, nb : nbPerPage}) }}">Previous</a>
                    </li>
                {% endif %}
                {% for i in 1..nbPages %}
                    <li class="page-item"><a class="page-link"
                                             href="{{ path('app_person_filter', {page: i, nb : nbPerPage}) }}">{{ i }}</a>
                    </li>
                {% endfor %}
                {% if actualPage < nbPages %}
                    <li class="page-item"><a class="page-link"
                                             href="{{ path('app_person_filter', {page: actualPage + 1, nb : nbPerPage}) }}">Next</a>
                    </li>
                {% endif %}
            </ul>
        {% endif %}
    </div>
    <p class="text-center"> Actual page : {{ actualPage }}</p>
{% endblock %}