{% extends 'base.html.twig' %}

{% block title %}
    Person's details
{% endblock %}

{% block pageTitle %}
    Details of person with id {{ person.id }} :
{% endblock %}

{% block body %}
    <a class="btn btn-secondary btn-sm mb-2" href="{{ path('app_person_filter') }}">Go back</a>
    <div class="container mt-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-7">
                <div class="card p-3 py-4">
                    <div class="text-center">
                        <img src="{{ asset('uploads/pics/'~ person.image) }}" width="100" class="rounded-circle">
                    </div>
                    <div class="text-center mt-3">
                        <h5 class="m-2 font-weight-bolder">{{ person.firstname }} {{ person.lastname }}</h5>
                        <span class="bg-secondary p-1 px-4 rounded text-white">{{ person.age }} years old</span>
                        <p class="mt-3 font-italic">Looking for job : {{ person.job }}</p>
                        <div class="px-4 mt-1">
                            <p class="mt-3 text-left font-weight-bold">Description of the person and job looked for :</p>
                            <p class="fonts bg-light rounded">{{ person.description }}</p>
                        </div>
                        <div class="container mt-2">
                            <div class="row">
                                <div class="col">
                                    <p class="font-weight-bold">List of hobbies :</p>
                                    <ul>
                                        {% for h in person.hobbies %}
                                            <li>{{ h.name }}</li>
                                        {% endfor %}
                                    </ul>
                                </div>
                                <div class="col">
                                    <span class="font-weight-bold">Added by : </span>
                                    {% if person.createdBy %}
                                        <span>{{ person.createdBy.email }}</span>
                                    {% else %}
                                        <p>unknown</p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-5 text-center">
        <a class="btn btn-dark" href="{{ path('app_person_pdf', {'id': person.id}) }}">Print customer details</a>
    </div>
{% endblock %}
