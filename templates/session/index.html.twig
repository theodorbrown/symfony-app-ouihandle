{% for msg in app.session.flashBag.get('info') %}
    <div class="alert alert-info mt-2" role="alert">
        <p>{{ msg }}</p>
    </div>
{% endfor %}

{% for msg in app.session.flashBag.get('error') %}
    <div class="alert alert-danger mt-2" role="alert">
        <p>{{ msg }}</p>
    </div>
{% endfor %}